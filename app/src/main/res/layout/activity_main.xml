<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.labcalculator.MainActivity">

    <TextView
            android:text=""
            android:gravity="bottom|right"
            android:layout_width="100dp"
            android:layout_height="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.966"            app:layout_constraintVertical_bias="0.05"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            android:id="@+id/currResTextView"/>

    <TextView
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:text="0"
            android:gravity="bottom|right"
            android:textSize="70dp"
            android:textColor="@android:color/black"
            app:layout_constraintVertical_bias="0.25"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/currResTextView"
            app:layout_constraintRight_toRightOf="@+id/currResTextView"
